<% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col-8 offset-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <br>
                    <%= listing.description %> <br>
                        <b>â‚¹ <%= listing.price.toLocaleString("en-IN") %></b> <br>
                        <%= listing.location %> <br>
                            <%= listing.country %>
                </p>
            </div>
        </div>


        <div class="btns"><a href="/listings/<%= listing._id %>/edit"
                class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

            <form action="/listings/<%= listing._id %>?_method=DELETE " method="post"> <br>
                <button class="btn btn-dark offset-4 mb-4">Delete</button>
            </form>
        </div>

        <!-- REVIEWS -->
        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="0" max="5" id="rating" name="review[rating]" class="form-range">
                </div>

                <div>
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">Please enter some comment for your reviews</div>
                    <div class="valid-feedback">Thanks!!</div>
                </div>
                <button class="btn btn-outline-dark mt-3">Submit </button>
            </form>

            <hr>
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews){ %>
                    <div class="card col-5 mb-3 ms-3">
                        <div class="card-body">
                            <h5 class="card-title">Card title</h5>
                            <h6 class="card-subtitle mb-2 text-body-secondary">Card subtitle</h6>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text"><b>
                                    <%= review.rating %> Stars
                                </b></p>

                             <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-2">
                                    <button class="btn btn-dark">Delete</button>
                                </form> 
                        </div>
                    </div>
                    <% } %>
            </div> 

        </div>
    </div>